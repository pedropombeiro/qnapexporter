{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergeRequireAllStatusChecks",
    ":enablePreCommit",
    ":pinSkipCi",
    ":prImmediately",
    ":separateMultipleMajorReleases",
    "schedule:automergeNonOfficeHours"
  ],
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "enabledManagers": [
    "gomod",
    "github-actions",
    "dockerfile",
    "custom.regex",
    "pre-commit"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Disable digest-only updates for Docker and GitHub Actions updates",
      "matchDatasources": [
        "docker",
        "github-actions"
      ],
      "digest": {
        "enabled": false
      }
    },
    {
      "description": "Auto-merge patch Go version updates (.tool-versions, go.mod) into a single PR",
      "matchDatasources": [
        "golang-version",
        "go"
      ],
      "matchPackageNames": [
        "go",
        "golang"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "Go version",
      "automerge": true,
      "commitMessageSuffix": "- `AUTOMERGE`"
    },
    {
      "description": "Require manual review for minor and major Go version updates",
      "matchDatasources": [
        "golang-version",
        "go"
      ],
      "matchPackageNames": [
        "go",
        "golang"
      ],
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "automerge": false
    },
    {
      "description": "Auto-merge non-breaking GitHub Actions updates (patch and minor versions only) as a grouped PR",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true,
      "groupName": "GitHub Actions",
      "commitMessageSuffix": "- `AUTOMERGE`"
    },
    {
      "description": "Auto-merge linter and test framework package updates directly to branch without creating a PR",
      "automerge": true,
      "automergeType": "branch",
      "commitMessageSuffix": "- `AUTOMERGE`",
      "extends": [
        "packages:linters",
        "packages:test"
      ]
    },
    {
      "description": "Pin Ubuntu to 20.x for QDK compatibility",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ubuntu"
      ],
      "allowedVersions": "/^20\\./"
    },
    {
      "description": "Group Docker base image updates",
      "matchManagers": [
        "dockerfile"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Docker images",
      "automerge": true,
      "commitMessageSuffix": "- `AUTOMERGE`"
    },
    {
      "description": "Group all Go module updates (direct and indirect dependencies) into a single PR",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchDepTypes": [
        "indirect",
        "require"
      ],
      "groupName": "Go modules",
      "automerge": true,
      "commitMessageSuffix": "- `AUTOMERGE`"
    },
    {
      "description": "Separate major Go module updates into individual PRs for review",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "description": "Ensure Go module files are updated properly",
      "matchManagers": [
        "gomod"
      ],
      "rangeStrategy": "bump",
      "lockFileMaintenance": {
        "enabled": true
      }
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Go version in .tool-versions",
      "managerFilePatterns": [
        "/^\\.tool-versions$/"
      ],
      "matchStrings": [
        "golang\\s+(?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "golang-version",
      "depNameTemplate": "golang"
    },
    {
      "customType": "regex",
      "description": "Update QDK version in Dockerfile",
      "managerFilePatterns": [
        "/^qpkg/Dockerfile$/"
      ],
      "matchStrings": [
        "ARG QDK_VER=(?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "qnap-dev/QDK",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 0,
  "platformAutomerge": true
}
